<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_view_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.MapViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <!-- Map Fragment-->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:context=".controllers.activities.MainUserActivity"
            android:layout_weight="7"/>

        <!-- Bottom Menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3">

            <!-- Service Providers Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/bottom_menu_man_icon"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_man_identity_black_48dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Provider"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/bottom_menu_current_available_providers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currently 23 Available Providers"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <Switch
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <!--Line Break-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="50dp"
                android:background="@android:color/darker_gray" />

            <!-- Iron Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/bottom_menu_iron_icon"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_iron_black"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ironing Service"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/bottom_menu_iron_text_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Include Ironing"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <Switch
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <!--Line Break-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="50dp"
                android:background="@android:color/darker_gray" />

            <!--Delivery Container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/bottom_menu_delivery_icon"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_delivery_truck_black"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Service"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/bottom_menu_delivery_text_on_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Include delivery"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <Switch
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <!--Line Break-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="50dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>