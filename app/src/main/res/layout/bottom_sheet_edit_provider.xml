<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottom_sheet_edit_provider_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <!--Import of TopBar-->
    <include
        layout="@layout/bottom_sheet_back_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Personal Details Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:focusable="true"
        android:text="Personal Details:"/>

    <!-- Address-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edit_provider_address_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Address: 5 Rue de Rivoli..."
        android:focusable="false"
        android:layout_weight="8"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/edit_provider_phone_text"/>
<!--        <ImageView-->
<!--            android:id="@+id/edit_provider_address_v_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_v_black_24dp"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_gravity="center"-->
<!--            android:clickable="false"-->
<!--            android:visibility="invisible"/>-->
    </LinearLayout>

    <!-- Zip Code-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_provider_zip_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Zip Code: 75001"
            android:layout_weight="8"
            android:inputType="number"/>
<!--        <ImageView-->
<!--            android:id="@+id/edit_provider_zip_v_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_v_black_24dp"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_gravity="center"-->
<!--            android:clickable="false"-->
<!--            android:visibility="invisible"/>-->
    </LinearLayout>

    <!-- Phone-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_provider_phone_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Phone: +33(0)..."
            android:layout_weight="8"
            android:inputType="phone"/>
<!--        <ImageView-->
<!--            android:id="@+id/edit_provider_phone_v_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_v_black_24dp"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_gravity="center"-->
<!--            android:clickable="false"-->
<!--            android:visibility="invisible"/>-->
    </LinearLayout>

    <!-- Service Details Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Service Details:"/>

    <!-- Address-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_provider_machine_type_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Machine: LG - TWIN-Wash 30T"
            android:layout_weight="8"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/edit_provider_phone_text"/>
<!--        <ImageView-->
<!--            android:id="@+id/edit_provider_machine_v_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_v_black_24dp"-->
<!--            android:layout_weight="2"-->
<!--            android:layout_gravity="center"-->
<!--            android:clickable="false"-->
<!--            android:visibility="invisible"/>-->
    </LinearLayout>

    <Button
        android:id="@+id/edit_provider_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"/>

</LinearLayout>